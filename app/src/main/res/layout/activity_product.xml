<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutProduct"

    tools:context=".ActivityPackage.ProductActivity">

    <ScrollView
        android:id="@+id/scroll1"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:elevation="8dp"
                    android:id="@+id/imgProductMain"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="center"
                    android:src="@drawable/product_" />

                <ImageButton
                    android:id="@+id/btnProductBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/cycle"
                    android:scaleType="center"
                    android:src="@drawable/arrow" />

<!--                <TextView-->
<!--                    android:layout_width="70dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_below="@+id/imgProductMain"-->
<!--                    android:layout_alignRight="@+id/imgProductMain"-->
<!--                    android:layout_marginTop="-37dp"-->
<!--                    android:background="@drawable/cycle"-->
<!--                    android:fontFamily="sans-serif-medium"-->
<!--                    android:gravity="center"-->
<!--                    android:text="1/4" />-->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Dây Buộc Tóc Phong Cách Hàn Quốc Nhiều Màu Tùy Chọn"
                    android:textColor="#222222"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="đ15.000 - đ55.000"
                    android:textColor="#FC5A31"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingProduct"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:numStars="5"
                        android:rating="3.5" />

                    <TextView
                        android:id="@+id/txtProductRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="4.9 | Đã bán 999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#F9F9F9"
                        android:elevation="8dp"
                        android:gravity="center_vertical"
                        android:text="  MÔ TẢ SẢN PHẨM"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Thời gian giao hàng dự kiến cho sản phẩm này là từ 7-9 ngày
Chất liệu: nhựa / nhựa resin
  Phong cách: thời trang
  Trạng thái: mới
  Gói hàng bao gồm: số lượng lớn
  Đặc điểm: một màu ngẫu nhiên
  ★★★★★ Còn hàng ★★★★★

  ❥❥❥Kính gửi quý khách

  Hàng lấy trực tiếp từ nhà máy, mong bạn theo dõi cửa hàng để cập nhật thêm thông tin về các sản phẩm.
  Nếu bạn có bất kỳ câu hỏi nào, vui lòng trò chuyện và liên hệ với chúng tôi
  Các bạn có thể theo dõi cửa hàng nếu thích sản phẩm, cảm ơn các bạn đã đến mua sắm
Hàng lấy trực tiếp từ nhà máy, mong bạn theo dõi cửa hàng để cập nhật thêm thông tin về các sản phẩm.
  Nếu bạn có bất kỳ câu hỏi nào, vui lòng trò chuyện và liên hệ với chúng tôi
  Các bạn có thể theo dõi cửa hàng nếu thích sản phẩm, cảm ơn các bạn đã đến mua sắm" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/scroll1"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#D9D9D9"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Chat ngay"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#444B54" />

            <LinearLayout
                android:id="@+id/btnThemVaoGioHang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/add_to_cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Giỏ hàng"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnMuaNgay"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Thêm vào giỏ hàng"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="#F7452E"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
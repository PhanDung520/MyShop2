<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMostView"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="2dp"
    android:layout_height="120dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imgCardMostView"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:src="@drawable/laro_logo"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtMostViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="La Roche-Posay's"
                android:textStyle="bold"/>
            <RatingBar
                android:id="@+id/ratingMostView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="2dp"
                android:rating="3.5"
                style="@style/Widget.AppCompat.RatingBar.Small"/>
            <TextView
                android:id="@+id/txtMostViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The formulation charter for each La Roche-Posay product goes"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
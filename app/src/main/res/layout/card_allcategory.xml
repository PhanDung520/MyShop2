<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="260dp"
    android:id="@+id/allcate"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCardAllcate"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laro_logo"/>
        <TextView
            android:id="@+id/txtTitleCardAllcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La Roche-Posay's"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/ratingCardAllcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:layout_marginTop="2dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"/>
        <TextView
            android:id="@+id/txtAllcateDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The formulation charter for each La Roche-Posay product goes"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>